<div class="row">
  <div class='span0 well text-center'>
    <%= link_to vote_post_path(post, vote: true), remote: true, method: 'post' do %>
      <i class='icon-arrow-up'></i>
    <% end %>
    </br>
      <span id="post_<%= post.slug %>_vote"><%= post.total_votes %> votes </span>
    </br>
    <%= link_to vote_post_path(post, vote: false), remote: true, method: 'post' do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  </div>
  <div class="span8 well">
    <p class="pull-right">
      <% if logged_in? %>
      [<%= link_to "Edit this post", edit_post_path(post) %>]
      <% end %>
    </p>
    <%= render post.categories %>
    <h4><%= link_to post.title, post.url %></h4>
    <p><%= post.id %></p>
    <p><%= post.description %></p>
      <p>
        <span class='quiet'>Posted by</span> <%= link_to post.creator.username, user_path(post.creator) %>
        <small>Posted at <%= display_datetime(post.created_at) %></small>
      </p>
      <small>
        <span>
          <%= link_to "#{post.comments.size} comments", post_path(post) %>
        </span>
      </small>
  </div>
</div>