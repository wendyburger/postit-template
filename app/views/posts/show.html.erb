<p>
  <%= render @post.categories %>  
</p>

<h4>You are viewing:<%= link_to @post.title, fix_url(@post.url) %></h4>

<p>
  <%= @post.description %>
</p>
</br>

<%= form_for [@post, @comment] do |f| %>
  <%= render 'shared/errors', obj: @comment %>
  <%= f.label :body, "Leave a comment" %>
  <%= f.text_area :body, rows: 4, class: "span4" %>
  </br>
  <%= f.submit "Create New Comment", class: "btn btn-primary" %>
<% end %>

<h5>Comments: </h5>
  <% @post.comments.each do |comment| %>
    <div class='well span8'>
      <em>"<%= comment.body %>"</em>
      </br>
      <span class='quite'>by </span><%= link_to comment.creator.username %>
      <small><%= display_datetime(comment.created_at) %></small>
    </div>    
  <% end %>